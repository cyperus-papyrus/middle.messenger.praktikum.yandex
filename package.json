    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jsdom": "^22.1.0",
    "lint-staged": "^16.1.4",
    "mocha": "^10.8.2",
    "sass": "^1.89.0",
    "sinon": "^21.0.0",
    "stylelint": "^16.20.0",
