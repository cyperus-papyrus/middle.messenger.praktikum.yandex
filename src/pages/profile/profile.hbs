<div class="profile">
  {{#> Modal class="modal-profile" title="Профиль" backButton=true footer=true }}
  {{#*inline "body"}}

  <div class="avatar profile__avatar">
    {{> Avatar name="Avatar.svg"}}
  </div>

  <div class="profile__userData">
    {{#each userData}}

    <div class="profile__userData-line">
      <span class="profile__label">{{this.label}}</span>
      <span class="profile__value">{{this.value}}</span>
    </div>
    {{/each}}

    <div class="profile__userData-line profile__userData-link">
      <a href="#" class="link">Хотите сменить пароль?</a>
    </div>
  </div>

  {{/inline}}

  {{#*inline "footer"}}
  {{> Button id="btnChangeProfile" class="button button-secondary" text="Изменить данные"}}
  {{/inline}}
  {{/Modal}}
</div>
{{> Footer links=footerLinks }}
